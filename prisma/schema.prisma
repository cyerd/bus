generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url = env("MONGODB_URI")
}
model bookings {
  id  String @id @map("_id")
      from String
      destination String
      pickup String
      fullName String
      mobile String
      age String
      nationality String
      luggage String
      startDate String
      gender String
      trip String
      totalAmount Int
      discount String
      totalPaid Int
      paymentMethod String
      seatNo String 
      idNumber String
      
}

model bookedSeats {
  id  String @id @map("_id")
      from String
      destination String
      pickup String
      fullName String
      mobile String
      age String
      nationality String
      luggage String
      startDate String
      gender String
      trip String
      totalAmount Int
      discount String
      totalPaid Int
      paymentMethod String
      seatNo String 
      idNumber String
 
  
}

model parcels {
  id String @id @map("_id")
  from String
  pickup String
  destination String
  drop String
  sender String
  senderMobile Int
  receiver String
  receiverMobile Int
  itemType String
  pickDate DateTime
  itemName String
  itemQty Int
  cost Int
  totalAmount Int


}